<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TranslucentTheme_Login" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Navigation_Login" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="LoginEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">@dimen/dimen_18</item>
        <item name="android:paddingBottom">@dimen/dimen_18</item>
        <item name="android:textColor">@color/colorTextHint</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
    </style>

</resources>
